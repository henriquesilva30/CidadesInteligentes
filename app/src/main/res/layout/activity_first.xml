<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sl"
        android:alpha="0.4"
        android:scaleType="centerCrop"/>

<RelativeLayout
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_width="300dp"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <ImageView
        android:layout_marginTop="13dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/user"
        android:layout_width="2dp"
        android:layout_height="42dp"
        android:background="#000000"
        />

    <ImageView
        android:layout_marginTop="13dp"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/user"
        android:layout_width="2dp"
        android:layout_height="42dp"
        android:background="#000000"
        />


    <ImageView
        android:layout_marginTop="13dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <EditText
        android:background="@color/white"
        android:id="@+id/user"
        android:alpha="0.7"
        android:inputType="number"
        android:hint="@string/telem_vel"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passe"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#000000"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_toRightOf="@id/passe"
        android:layout_marginTop="70dp"
        android:layout_height="44dp"
        android:background="#000000"
        />

    <ImageView
        android:layout_width="2dp"
        android:layout_toLeftOf="@id/passe"
        android:layout_marginTop="70dp"
        android:layout_height="44dp"
        android:background="#000000"
        />


    <ImageView
        android:layout_above="@id/passe"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#000000"
        />

    <EditText
        android:layout_marginTop="17dp"
        android:background="#FFFFFF"
        android:id="@+id/passe"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user"
        android:layout_width="200dp"
        android:inputType="textPassword"
        android:alpha="0.7"
        android:paddingTop="8dp"
        android:layout_height="40dp"
        android:hint="@string/palavra_chave"
        android:textAlignment="center"
        android:gravity="center_horizontal"/>



    <Button
        android:id="@+id/login"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/passe"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/login"
        android:onClick="login"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/notas"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/notas"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>


</RelativeLayout>