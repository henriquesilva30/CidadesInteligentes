<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="editarCampos"
        android:layout_toLeftOf="@+id/layoutRemove">
    <TextView
        android:id="@+id/descricao"
        android:padding="10dp"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/delete"
        android:text="" />

    <TextView
        android:id="@+id/localizacao"
        android:layout_toRightOf="@+id/descricao"
        android:padding="10dp"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/descricao"
        android:text="" />

    <TextView
        android:id="@+id/data"
        android:layout_toRightOf="@+id/localizacao"
        android:padding="10dp"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/descricao"
        android:text="" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:onClick="remove"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/delete"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_delete_black_24dp"/>
    </LinearLayout>

  <ImageView
      android:layout_below="@+id/layoutRemove"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="#000000"
      ></ImageView>


</RelativeLayout>